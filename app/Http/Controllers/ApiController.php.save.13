public function getItem(Request $request)
{
    /* ------------------------------------------------------
     | 1) VALIDATION
     ------------------------------------------------------ */
    $validator = Validator::make($request->all(), [
        'limit'         => 'nullable|integer',
        'offset'        => 'nullable|integer',
        'id'            => 'nullable',
        'search'        => 'nullable|string',
        'custom_fields' => 'nullable|array',
        'category_id'   => 'nullable',
        'category_slug' => 'nullable',
        'user_id'       => 'nullable',
        'min_price'     => 'nullable',
        'max_price'     => 'nullable',
        'sort_by'       => 'nullable|in:new-to-old,old-to-new,price-high-to-low,price-low-to-high,popular_items',
        'posted_since'  => 'nullable|in:all-time,today,within-1-week,within-2-week,within-1-month,within-3-month'
    ]);

    if ($validator->fails()) {
        return ResponseService::validationError($validator->errors()->first());
    }

    try {

        /* ------------------------------------------------------
         | 2) CACHE CATEGORY IDS
         ------------------------------------------------------ */
        $categoryIDs = null;

        if ($request->category_id || $request->category_slug) {
            $cacheKey = 'cat_ids_' . ($request->category_id ?? $request->category_slug);

            $categoryIDs = Cache::remember($cacheKey, 3600, function () use ($request) {
                $query = Category::query();

                if ($request->category_id) {
                    $query->where('id', $request->category_id);
                } else {
                    $query->where('slug', $request->category_slug);
                }

                $cat = $query->with('children')->get();
                return HelperService::findAllCategoryIds($cat);
            });
        }

        /* ------------------------------------------------------
         | 3) BASE QUERY
         ------------------------------------------------------ */
        $baseQuery = Item::query()
            ->with([
                'user:id,name,profile,is_verified',
                'category:id,name,image,is_job_category,price_optional',
                'item_custom_field_values.custom_field:id,name,type',
                'gallery_images:id,image,item_id',
                'featured_items:id,item_id,start_date,end_date',
                'favourites:id,item_id',
                'area:id,name'
            ])
            ->withCount(['featured_items', 'job_applications'])
            ->select('items.*');

        /* ------------------------------------------------------
         | 4) GENERAL FILTERS
         ------------------------------------------------------ */
        if ($request->id) {
            $baseQuery->where('id', $request->id);
        }

        if ($categoryIDs) {
            $baseQuery->whereIn('category_id', $categoryIDs);
        }

        if ($request->min_price || $request->max_price) {
            $maxPrice = Cache::remember(
                'max_item_price',
                3600,
                fn () => Item::max('price') ?? 0
            );

            $baseQuery->whereBetween('price', [
                $request->min_price ?? 0,
                $request->max_price ?? $maxPrice
            ]);
        }

        if ($request->posted_since) {
            $since = match ($request->posted_since) {
                'today'           => now()->startOfDay(),
                'within-1-week'   => now()->subDays(7),
                'within-2-week'   => now()->subDays(14),
                'within-1-month'  => now()->subMonth(),
                'within-3-month'  => now()->subMonths(3),
                default           => null,
            };

            if ($since) {
                $baseQuery->whereDate('created_at', '>=', $since);
            }
        }

        if ($request->user_id) {
            $baseQuery->where('user_id', $request->user_id);
        }

        if ($request->slug) {
            $baseQuery->where('slug', $request->slug);
        }

        /* ------------------------------------------------------
         | 5) AUTH HANDLING
         ------------------------------------------------------ */
        if (Auth::check()) {
            $baseQuery->with([
                'item_offers'   => fn ($q) => $q->where('buyer_id', Auth::id()),
                'user_reports'  => fn ($q) => $q->where('user_id', Auth::id()),
            ]);

            $path = strtok($request->getRequestUri(), '?');

            if ($path === '/api/my-items') {
                $baseQuery->where('user_id', Auth::id())->withTrashed();

                if ($request->filled('status')) {
                    $baseQuery->where('status', $request->status);
                }
            } else {
                $baseQuery->where('status', 'approved')
                    ->has('user')
                    ->onlyNonBlockedUsers()
                    ->getNonExpiredItems();
            }
        } else {
            $baseQuery->where('status', 'approved')
                ->getNonExpiredItems();
        }

        /* ------------------------------------------------------
         | 6) SORTING
         ------------------------------------------------------ */
        $applySorting = function ($q) use ($request) {
            return match ($request->sort_by) {
                'new-to-old'        => $q->orderBy('id', 'DESC'),
                'old-to-new'        => $q->orderBy('id', 'ASC'),
                'price-high-to-low' => $q->orderBy('price', 'DESC'),
                'price-low-to-high' => $q->orderBy('price', 'ASC'),
                'popular_items'     => $q->orderBy('clicks', 'DESC'),
                default             => $q->orderBy('id', 'DESC'),
            };
        };

        /* ------------------------------------------------------
         | 7) SEARCH (IMPORTANT: BEFORE JOINS)
         ------------------------------------------------------ */
        $applySearch = function ($q) use ($request) {
            if ($request->filled('search')) {
                $q->search($request->search);
            }
            return $q;
        };

        /* ------------------------------------------------------
         | 8) CUSTOM FIELDS (AFTER SEARCH)
         ------------------------------------------------------ */
        $applyCustomFields = function ($q) use ($request) {
            $fields = $request->custom_fields ?? [];

            if (empty($fields)) {
                return $q;
            }

            foreach ($fields as $fieldId => $value) {
                $alias = 'cf' . $fieldId;

                $q->join("item_custom_field_values as {$alias}", "{$alias}.item_id", '=', 'items.id')
                  ->where("{$alias}.custom_field_id", $fieldId)
                  ->where("{$alias}.value", 'LIKE', '%' . trim(is_array($value) ? $value[0] : $value) . '%');
            }

            return $q;
        };

        /* ------------------------------------------------------
         | 9) LOCATION FALLBACK LEVELS
         ------------------------------------------------------ */
        if ($request->area_id)      $levels = ['area', 'city', 'state', 'country', null];
        elseif ($request->city)     $levels = ['city', 'state', 'country', null];
        elseif ($request->state)    $levels = ['state', 'country', null];
        elseif ($request->country)  $levels = ['country', null];
        else                        $levels = [null];

        $applyLocation = function ($q, $level) use ($request) {
            return match ($level) {
                'area'    => $q->where('area_id', $request->area_id),
                'city'    => $q->where('city', $request->city),
                'state'   => $q->where('state', $request->state),
                'country' => $q->where('country', $request->country),
                default   => $q,
            };
        };

        /* ------------------------------------------------------
         | 10) EXECUTE FALLBACK
         ------------------------------------------------------ */
        $result = null;

        foreach ($levels as $level) {
            $attempt = clone $baseQuery;

            $attempt = $applySearch($attempt);          // ğŸ”¥ search first
            $attempt = $applyLocation($attempt, $level);
            $attempt = $applyCustomFields($attempt);
            $attempt = $applySorting($attempt);

            $result = $attempt->paginate($request->limit ?? 15);

            if ($result->total() > 0) {
                break;
            }
        }

        /* ------------------------------------------------------
         | 11) RESPONSE
         ------------------------------------------------------ */
        return ResponseService::successResponse(
            "Advertisement Fetched Successfully",
            new ItemCollectionHeavy($result)
        );

    } catch (\Throwable $th) {
        ResponseService::logErrorResponse($th, "API Controller -> getItem");
        return ResponseService::errorResponse();
    }
}

